  </div>


  <div >
    <%= form.label :rating %>
    <%= form.text_field :rating %>
  </div>
  <div >
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

<div >
    <%= form.collection_select :genre_ids,Genre.all,:id,:name,{prompt:'select genres'},{multiple:true} %>
  </div>



